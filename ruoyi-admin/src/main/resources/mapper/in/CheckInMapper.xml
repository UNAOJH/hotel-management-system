<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.in.mapper.CheckInMapper">
    
    <resultMap type="CheckIn" id="CheckInResult">
        <result property="id"    column="id"    />
        <result property="reservationId"    column="reservation_id"    />
        <result property="checkInDate"    column="check_in_date"    />
        <result property="checkOutDate"    column="check_out_date"    />
        <result property="guestName"    column="guest_name"    />
        <result property="guestIdNumber"    column="guest_id_number"    />
        <result property="checkInStatus"    column="check_in_status"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectCheckInVo">
        select id, reservation_id, check_in_date, check_out_date, guest_name, guest_id_number, check_in_status, remark from biz_check_in
    </sql>

    <select id="selectCheckInList" parameterType="CheckIn" resultMap="CheckInResult">
        <include refid="selectCheckInVo"/>
        <where>  
            <if test="reservationId != null "> and reservation_id = #{reservationId}</if>
            <if test="checkInDate != null "> and check_in_date = #{checkInDate}</if>
            <if test="checkOutDate != null "> and check_out_date = #{checkOutDate}</if>
            <if test="guestName != null  and guestName != ''"> and guest_name like concat('%', #{guestName}, '%')</if>
            <if test="guestIdNumber != null  and guestIdNumber != ''"> and guest_id_number = #{guestIdNumber}</if>
            <if test="checkInStatus != null "> and check_in_status = #{checkInStatus}</if>
        </where>
    </select>
    
    <select id="selectCheckInById" parameterType="Long" resultMap="CheckInResult">
        <include refid="selectCheckInVo"/>
        where id = #{id}
    </select>

    <insert id="insertCheckIn" parameterType="CheckIn" useGeneratedKeys="true" keyProperty="id">
        insert into biz_check_in
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="reservationId != null">reservation_id,</if>
            <if test="checkInDate != null">check_in_date,</if>
            <if test="checkOutDate != null">check_out_date,</if>
            <if test="guestName != null and guestName != ''">guest_name,</if>
            <if test="guestIdNumber != null and guestIdNumber != ''">guest_id_number,</if>
            <if test="checkInStatus != null">check_in_status,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="reservationId != null">#{reservationId},</if>
            <if test="checkInDate != null">#{checkInDate},</if>
            <if test="checkOutDate != null">#{checkOutDate},</if>
            <if test="guestName != null and guestName != ''">#{guestName},</if>
            <if test="guestIdNumber != null and guestIdNumber != ''">#{guestIdNumber},</if>
            <if test="checkInStatus != null">#{checkInStatus},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateCheckIn" parameterType="CheckIn">
        update biz_check_in
        <trim prefix="SET" suffixOverrides=",">
            <if test="reservationId != null">reservation_id = #{reservationId},</if>
            <if test="checkInDate != null">check_in_date = #{checkInDate},</if>
            <if test="checkOutDate != null">check_out_date = #{checkOutDate},</if>
            <if test="guestName != null and guestName != ''">guest_name = #{guestName},</if>
            <if test="guestIdNumber != null and guestIdNumber != ''">guest_id_number = #{guestIdNumber},</if>
            <if test="checkInStatus != null">check_in_status = #{checkInStatus},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteCheckInById" parameterType="Long">
        delete from biz_check_in where id = #{id}
    </delete>

    <delete id="deleteCheckInByIds" parameterType="String">
        delete from biz_check_in where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>